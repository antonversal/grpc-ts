{
 "scripts": {
  "build": "tsc",
  "makepretty": "prettier --write -l '**/*.ts'",
  "lint": "yarn tslint -p .",
  "precommit": "lerna run tsc --noEmit && lint-staged"
 },
 "lint-staged": {
  "*.{js,ts,md}": [
   "yarn prettier --write",
   "git add"
  ],
  "src/**/*.ts": [
   "yarn lint --fix",
   "git add"
  ]
 },
 "devDependencies": {
  "husky": "^0.14.3",
  "lerna": "^2.11.0",
  "lint-staged": "^7.2.0",
  "prettier": "^1.13.7"
 },
 "license": "MIT"
}
