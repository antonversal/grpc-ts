{
  "name": "@join-com/grpc-ts",
  "version": "1.0.0-2",
  "description": "grpc typescript wrapper",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "tsc:check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "proto:generate": "protoc __tests__/proto/**/*.proto -I __tests__/proto --ts_out=proto_relative=../proto:/$PWD/__tests__/generated",
    "proto:replace_imports": "sed -i '' 's=@join-com/grpc-ts=../../../src=g' __tests__/generated/**/*.ts",
    "proto:make": "yarn proto:generate && yarn proto:replace_imports",
    "prepublish": "yarn build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/join-com/grpc-ts.git",
  "author": "JOIN Team",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "homepage": "https://github.com/join-com/grpc-ts",
  "contributors": [
    "Anton Versal <anton.versal@gmail.com>"
  ],
  "keywords": [
    "grpc",
    "protobuf",
    "typescript"
  ],
  "files": [
    "lib/"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.4",
    "@types/node": "^10.11.5",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "jest-watch-typeahead": "^0.2.0",
    "prettier": "^1.14.3",
    "protobufjs": "^6.8.8",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "grpc": "^1.15.1"
  }
}
